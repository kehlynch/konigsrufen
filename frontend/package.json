{
  "name": "kr-frontend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "node server.js",
    "test": "npm run lint && npm run flow",
    "pretty": "prettier **/*.js --write",
    "lint": "eslint **/*.js",
    "flow": "flow",
    "heroku-postbuild": "npm run build",
    "precommit": "cd .. && git diff --cached --name-only | if grep --quiet \"^frontend/.*\"; then cd frontend && npm run test && npm run check-svg-optimizify; fi",
    "check-svg-optimizify": "cd .. && git diff --cached --name-only | if grep --quiet \"^frontend/.*\\.svg$\"; then echo \"SVG FILES HAVE CHANGED - OPTIMIZING THEM DIRECTLY IN THE COMMIT...\"; cd frontend && npm run svg-optimizify && cd .. && git add *.svg; break; fi",
    "svg-optimizify": "find . -name '*.svg' -type f -exec svgo '{}' --disable=removeViewBox \\;"
  },
  "dependencies": {
    "babel-plugin-inline-import": "^2.0.6",
    "babel-plugin-transform-define": "^1.3.0",
    "compression": "^1.7.1",
    "core-js": "^2.5.3",
    "cross-fetch": "^1.1.1",
    "express": "^4.16.2",
    "heroku-ssl-redirect": "0.0.4",
    "lodash": "^4.17.4",
    "next": "^9.3.3",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-rangeslider": "^2.2.0",
    "styled-components": "^3.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-flow": "^6.23.0",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-jsx": "^4.0.2",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.58.0",
    "husky": "^0.14.3",
    "prettier": "^1.9.2",
    "semistandard": "^11.0.0",
    "svgo": "^1.0.3"
  },
  "engines": {
    "node": "^8.9.0",
    "npm": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kehlynch/konigsrufen.git"
  },
